{
  "name": "Semiont Demo Environment",

  "dockerComposeFile": "docker-compose.yml",
  "service": "demo-workspace",
  "workspaceFolder": "/workspaces/semiont/demo",

  "initializeCommand": "bash demo/.devcontainer/init-env.sh",
  "postCreateCommand": "bash .devcontainer/setup-demo.sh",

  "forwardPorts": [3000, 4000, 5432],

  "portsAttributes": {
    "3000": {
      "label": "Frontend (Semiont UI)",
      "onAutoForward": "notify",
      "protocol": "http"
    },
    "4000": {
      "label": "Backend (API)",
      "onAutoForward": "silent",
      "protocol": "http"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "CONTAINER.md",
        "datasets/README.md"
      ],
      "settings": {
        "workbench.sideBar.visible": true,
        "workbench.startupView": "workbench.explorer.fileView",
        "terminal.integrated.cwd": "/workspaces/semiont/demo"
      }
    },
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.cwd": "/workspaces/semiont/demo",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "workbench.startupEditor": "none",
        "workbench.colorTheme": "Default Dark Modern",
        "cSpell.words": [
          "semiont",
          "Semiont",
          "devcontainer",
          "Codespaces",
          "postgres",
          "postgresql",
          "ghcr"
        ]
      }
    }
  },

  "containerEnv": {
    "SEMIONT_VERSION": "0.2.0",
    "SEMIONT_API_URL": "http://localhost:4000",
    "NODE_ENV": "production"
  },

  "remoteEnv": {
    "SEMIONT_VERSION": "0.2.0",
    "SEMIONT_API_URL": "http://localhost:4000",
    "NODE_ENV": "production"
  },

  "secrets": {
    "ANTHROPIC_API_KEY": {
      "description": "API key for Anthropic Claude AI (optional for annotation features)",
      "documentationUrl": "https://console.anthropic.com/settings/keys"
    },
    "NEO4J_URI": {
      "description": "Neo4j connection URI (optional for graph features)",
      "documentationUrl": "https://neo4j.com/cloud/aura/"
    },
    "NEO4J_USERNAME": {
      "description": "Neo4j username (usually 'neo4j')"
    },
    "NEO4J_PASSWORD": {
      "description": "Neo4j database password"
    },
    "NEO4J_DATABASE": {
      "description": "Neo4j database name (usually 'neo4j')"
    }
  },

  "remoteUser": "node"
}
