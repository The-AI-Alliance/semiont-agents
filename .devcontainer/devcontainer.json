{
  "name": "Semiont Agents Demo",

  "dockerComposeFile": "docker-compose.yml",
  "service": "demo-workspace",
  "workspaceFolder": "/workspaces/semiont-agents",

  "initializeCommand": "bash .devcontainer/init-env.sh",
  "postCreateCommand": "npm install",
  "postAttachCommand": "bash .devcontainer/welcome.sh",

  "forwardPorts": [3000, 4000, 5432],

  "portsAttributes": {
    "3000": {
      "label": "Frontend (Semiont UI)",
      "onAutoForward": "notify",
      "protocol": "http"
    },
    "4000": {
      "label": "Backend (API)",
      "onAutoForward": "silent",
      "protocol": "http"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },

  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "docs/CONTAINER.md"
      ],
      "settings": {
        "workbench.sideBar.visible": true,
        "workbench.startupView": "workbench.explorer.fileView",
        "terminal.integrated.cwd": "/workspaces/semiont-agents"
      }
    },
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.cwd": "/workspaces/semiont-agents",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "workbench.startupEditor": "none",
        "workbench.colorTheme": "Default Dark Modern",
        "cSpell.words": [
          "semiont",
          "Semiont",
          "devcontainer",
          "Codespaces",
          "postgres",
          "postgresql",
          "ghcr"
        ]
      }
    }
  },

  "containerEnv": {
    "SEMIONT_VERSION": "0.2.17",
    "SEMIONT_API_URL": "http://localhost:4000",
    "SEMIONT_ENV": "demo",
    "SEMIONT_ROOT": "${containerWorkspaceFolder}/project",
    // Fix "client version 1.52 is too new" error when using docker-outside-of-docker
    // GitHub Codespaces Docker daemon only supports API version 1.43
    "DOCKER_API_VERSION": "1.43"
  },

  "remoteEnv": {
    "SEMIONT_VERSION": "0.2.17",
    "SEMIONT_API_URL": "http://localhost:4000",
    "SEMIONT_ENV": "demo",
    "SEMIONT_ROOT": "${containerWorkspaceFolder}/project",
    // Fix "client version 1.52 is too new" error when using docker-outside-of-docker
    // GitHub Codespaces Docker daemon only supports API version 1.43
    "DOCKER_API_VERSION": "1.43"
  },

  "secrets": {
    "ANTHROPIC_API_KEY": {
      "description": "API key for Anthropic Claude AI (optional for annotation features)",
      "documentationUrl": "https://console.anthropic.com/settings/keys"
    },
    "NEO4J_URI": {
      "description": "Neo4j connection URI (optional for graph features)",
      "documentationUrl": "https://neo4j.com/cloud/aura/"
    },
    "NEO4J_USERNAME": {
      "description": "Neo4j username (usually 'neo4j')"
    },
    "NEO4J_PASSWORD": {
      "description": "Neo4j database password"
    },
    "NEO4J_DATABASE": {
      "description": "Neo4j database name (usually 'neo4j')"
    }
  },

  "remoteUser": "node"
}
